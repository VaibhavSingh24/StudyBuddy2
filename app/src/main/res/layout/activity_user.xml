<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/app_name">

        </android.support.v7.widget.Toolbar>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="325dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:layout_weight="1"
        android:onClick="navib"
        android:backgroundTint="#cc1111"

        android:elevation="8dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp">

        <ImageView
            android:layout_width="97dp"
            android:layout_height="match_parent"
            android:src="@drawable/common_google_signin_btn_icon_light_focused" />

        <TextView
            android:id="@+id/textVie"
            android:layout_width="198dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:text="Project Based Learning"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="325dp"
        android:layout_height="100dp"
        android:backgroundTint="#cc1111"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:layout_weight="1"
        android:padding="10sp"
        android:onClick="navia"

        android:elevation="8dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="198dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:text="Video Lectures"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="325dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="141dp"
        android:layout_weight="1"
        android:backgroundTint="#cc1111"
        android:elevation="8dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="8dp"
        android:onClick="navic"
        app:cardMaxElevation="10dp">

        <ImageView
            android:layout_width="97dp"
            android:layout_height="match_parent"
            android:src="@drawable/common_google_signin_btn_icon_light_focused" />

        <TextView
            android:id="@+id/textVie12"
            android:layout_width="198dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:text="Ask Doubts"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="325dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:layout_weight="1"
        android:elevation="8dp"
        android:backgroundTint="#cc1111"
        android:onClick="navid"
        app:cardCornerRadius="1dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp">

        <ImageView
            android:layout_width="97dp"
            android:layout_height="match_parent"
            android:src="@drawable/common_google_signin_btn_icon_light_focused" />

        <TextView
            android:id="@+id/textVie2345"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:text="Feedback"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>
</RelativeLayout>

    </LinearLayout>
